@model RegisterDto

<style>
    .body {
        background-color: #f4f1ec;
        background-image: linear-gradient(to bottom, #f4f1ec, #efebe9);
    }
    .container {
        border: 20px;
        border-radius: 10px;
        background: #181818;
        padding: 50px;
    }
    .btn-primary {
        background-color: #5d4037;
        border-color: #5d4037;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s;
    }
    .btn-primary:hover {
        background-color: #4e342e;
        border-color: #4e342e;
        transform: scale(1.05);
    }
    .form-control:focus {
        border-color: #8d6e63;
        box-shadow: 0 0 0 0.2rem rgba(141, 110, 99, 0.25);
    }
    .text-center {
        text-align: center;
        margin-bottom: 20px;
    }
    .text-center a {
        text-decoration: none;
        color: #5d4037;
        transition: all 0.3s;
    }
    .text-center a:hover {
        color: #4e342e;
    }
    .bi {
        margin-right: 10px;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Đăng ký</h1>
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <form method="post">
                <div class="mb-3", class = "form-group">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3", class = "form-group">
                    <label asp-for="Password" class="form-label">Mật khẩu:</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3", class = "form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu:</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <a class="nav-link" style="color: white;" asp-controller="Account" asp-action="Login">Bạn đã có tài khoản ? <b> Đăng nhập tại đây</b></a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
            </form>
            <div class="text-center mt-3">
                <p>Đăng nhập bằng:</p>
                <button class="btn btn-danger w-100 mb-2" style="border-radius: 10px;">
                    <i class="bi bi-google"></i> Đăng nhập bằng Google
                </button>
                <button class="btn btn-primary w-100" style="border-radius: 10px;">
                    <i class="bi bi-facebook"></i> Đăng nhập bằng Facebook
                </button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">