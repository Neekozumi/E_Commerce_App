@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<style>
    body {
        background-color: #f4f1ec; 
        color: white; 
    }
    .card-title {
        color: black;
        font-weight: bold;
    }
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }
    .card:hover {
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    .card-header {
        background-color: #8d6e63; 
        color: white;
        font-weight: bold;
    }
    .card-body {
        background-color: #efebe9; 
    }
    .card-footer {
        background-color: #d7ccc8; 
    }
    .btn-primary {
        background-color: #5d4037;
        border-color: #5d4037;
    }
    .btn-primary:hover {
        background-color: #4e342e;
        border-color: #4e342e;
    }
    .btn-danger {
        background-color: #c62828; 
        border-color: #c62828;
    }
    .btn-danger:hover {
        background-color: #b71c1c;
        border-color: #b71c1c;
    }
    h1 {
        color: white; 
        text-align: center;
        margin-bottom: 30px;
        font-weight: bold;
    }
    .role-card {
        margin-bottom: 20px;
    }
    .role-card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
</style>

<div class="container mt-5">
    <h1>All Roles</h1>

    @if (Model.Any())
    {
        <div class="text-center mb-4">
            <a class="btn btn-primary btn-lg" asp-action="CreateRole" asp-controller="Administration">
                <i class="fas fa-plus-circle"></i> Add New Role
            </a>
        </div>

        <div class="row">
            @foreach (var role in Model)
            {
                <div class="col-md-4 mb-4 role-card">
                    <div class="card h-100">
                        <div class="card-header">
                            Role Id: @role.Id
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@role.Name</h5>
                        </div>
                        <div class="card-footer text-center">
                            <form asp-action="DeleteRole" asp-route-roleId="@role.Id" method="post">
                                <a asp-controller="Administration" asp-action="EditRole" asp-route-roleId="@role.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <span id="confirmDeleteSpan_@role.Id" style="display:none">
                                    <span>Are you sure?</span>
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Yes
                                    </button>
                                    <a href="# "
                                       class="btn btn-primary btn-sm"
                                       onclick="confirmDelete('@role.Id', false)">
                                        <i class="fas fa-times"></i> No
                                    </a>
                                </span>

                                <span id="deleteSpan_@role.Id">
                                    <a href="#"
                                       class="btn btn-danger btn-sm"
                                       onclick="confirmDelete('@role.Id', true)">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </span>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary btn-lg" asp-controller="Administration" asp-action="CreateRole">
                    <i class="fas fa-plus-circle"></i> Create Role
                </a>
            </div>
        </div>
    }
</div>

<script>
    function confirmDelete(uniqueId, isTrue) {
        var deleteSpan = 'deleteSpan_' + uniqueId;
        var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

        if (isTrue) {
            $('#' + deleteSpan).hide();
            $('#' + confirmDeleteSpan).show();
        } else {
            $('#' + deleteSpan).show();
            $('#' + confirmDeleteSpan).hide();
        }
    }
</script>